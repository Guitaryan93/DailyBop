* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: "Inter", "Segoe UI", Arial, sans-serif;
  background: linear-gradient(135deg, #111 0%, #1e1e1e 100%);
  color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 20px;
}

.container {
  max-width: 600px;
  width: 100%;
  text-align: center;
}

/* Header */
.header h1 {
  font-size: 3rem;
  font-weight: 800;
}

.header p {
  color: #aaa;
  font-style: italic;
  margin-top: 6px;
}

/* Music Card */
.card {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20px;
  padding: 30px;
  margin: 30px 0;
  box-shadow: 0 8px 20px rgba(0,0,0,0.4);
}

.card img {
  width: 160px;
  height: 160px;
  object-fit: cover;
  border-radius: 15px;
  margin-bottom: 20px;
}

.card h2 {
  font-size: 1.5rem;
  font-weight: 600;
  margin-bottom: 10px;
}

.card a {
  color: #facc15;
  font-weight: 500;
  text-decoration: none;
  transition: color 0.2s ease;
}

.card a:hover {
  color: #fde047;
}

/* Signup Form */
.signup {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20px;
  padding: 30px;
  box-shadow: 0 8px 20px rgba(0,0,0,0.4);
}

.signup h3 {
  font-size: 1.25rem;
  margin-bottom: 10px;
}

.signup p {
  color: #bbb;
  font-size: 0.9rem;
  margin-bottom: 20px;
}

.form-group {
  display: flex;
  gap: 10px;
}

.form-group input {
  flex: 1;
  padding: 12px 16px;
  border-radius: 12px;
  border: 1px solid #333;
  background: #111;
  color: #f5f5f5;
  outline: none;
  transition: border 0.2s ease;
}

.form-group input:focus {
  border-color: #facc15;
}

.form-group button {
  background: #facc15;
  color: #111;
  font-weight: 600;
  border: none;
  padding: 12px 20px;
  border-radius: 12px;
  cursor: pointer;
  transition: background 0.2s ease, transform 0.1s ease;
}

.form-group button:hover {
  background: #fde047;
}

.form-group button:active {
  transform: scale(0.97);
}

/* --- Responsive styles --- */
@media (max-width: 600px) {
  .header h1 {
    font-size: 2rem;
  }

  .card img {
    width: 120px;
    height: 120px;
  }

  .form-group {
    flex-direction: column;
  }

  .form-group input,
  .form-group button {
    width: 100%;
  }

  .form-group button {
    margin-top: 10px;
  }
}

@media (max-width: 400px) {
  body {
    padding: 10px;
  }

  .header h1 {
    font-size: 1.75rem;
  }

  .card h2 {
    font-size: 1.25rem;
  }
}
